<Window x:Class="TaekwondoScore.Windows.ChangeNameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:TaekwondoScore.Windows"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d"
        Title="ChangeNameWindow" Height="380" Width="800">
    <Grid>
        <StackPanel Margin="40 0">
            <Label Content="Athlete - 1" Foreground="Blue" FontSize="40"/>
            <TextBox x:Name="nameBlueTxb" Height="60" BorderThickness="2" Background="Blue" Foreground="White" FontSize="33" md:HintAssist.Hint="Name" md:HintAssist.HintOpacity="0.9" MaxLength="25" />
            <Label Content="Athlete - 2" Foreground="Red" FontSize="40"/>
            <TextBox  x:Name="nameRedTxb" Height="60" BorderThickness="2" Background="Red" Foreground="White" FontSize="33" md:HintAssist.Hint="Name" md:HintAssist.HintOpacity="0.9" />
            <Button x:Name="nextBtn" Background="#00C500" Foreground="White" Height="50" Width="150" Margin="20" Content="Next"  FontWeight="DemiBold" FontSize="30" Click="nextBtn_Click"/>
        </StackPanel>
    </Grid>
</Window>
